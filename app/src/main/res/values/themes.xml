<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WanAndroidJetpack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WanAndroidJetpack" parent="Base.Theme.WanAndroidJetpack" />

    <style name="style_home_rv_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_home_rv_item2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#262626</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="style_tv_sub_title">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/color_262626</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp15</item>
    </style>

    <style name="style_tv_title">
        <item name="android:textSize">@dimen/sp30</item>
        <item name="android:textColor">@color/color_262626</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp15</item>
    </style>
    <style name="style_tab_selected">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="style_tab_unselected">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="style_btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/dp5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_tv_small_center_title">
        <item name="android:textColor">@color/color_262626</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/dp5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>